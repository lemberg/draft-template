parameters:
  ascii: ~
  git_dir: .
  bin_dir: vendor/bin
  tasks:
    composer: ~
    composer_normalize: ~
    git_commit_message:
      enforce_capitalized_subject: false
      matchers:
        Subject must start with an issue number: /^\#\d+/
        Subject text must start with a capital letter: /^\#\d+\s[A-Z]+/
    jsonlint: ~
    phpcs: ~
    phplint: ~
